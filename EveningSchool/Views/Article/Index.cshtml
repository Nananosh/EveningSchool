@model List<EveningSchool.ViewModels.ArticleViewModel>

@foreach (var article in @Model)
{
    <div class="row shadow-lg mt-5 ">
        <div class="col-lg-12 d-flex justify-content-start mb-3">
            <div class="text-muted">@article.DatePublication</div>
        </div>
        <div class="col-lg-12 d-flex justify-content-start mb-3">
            <div class="h2"><a asp-controller="Article" asp-action="Article" asp-route-id="@article.Id">@article.Title</a></div>
        </div>
        <div class="col-lg-12 d-flex justify-content-start mb-3">
            <img src="@article.Image" style="max-height: 350px; max-width: 50%; background-size: cover; margin: 0;">
        </div>
        <div class="col-lg-12 mb-3 cropped-text">
            @article.Text
        </div>
    </div>   
}