@model EveningSchool.ViewModels.ArticleViewModel

<div class="row shadow-lg mt-5">
    <div class="col-lg-12 d-flex justify-content-start mb-3">
        <div class="text-muted">@Model.DatePublication</div>
    </div>
    <div class="col-lg-12 d-flex justify-content-start mb-3">
        <img src="@Model.Image" style="max-height: 350px; max-width: 50%; background-size: cover; margin: 0;">
    </div>
    <div class="col-lg-12 d-flex justify-content-start mb-3">
        <div class="h2">@Model.Title</div>
    </div>
    <div class="col-lg-12 mb-3">
        @Model.Text
    </div>
</div>