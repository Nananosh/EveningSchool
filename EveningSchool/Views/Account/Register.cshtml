@model EveningSchool.ViewModels.Account.RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
}
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<div id="register" class="container p-xl-3">
    <br>
    <div class="row justify-content-lg-center">
        <div class="col-lg-4 shadow pt-3 pb-1 mb-2 bg-white rounded">
            <form class="form-group" method="post" asp-controller="Account" asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input class="form-control form-control shadow-sm bg-white rounded" asp-for="Email" placeholder="Введите почту">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input class="form-control form-control shadow-sm bg-white rounded" asp-for="UserName" placeholder="Введите имя пользователя">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input class="form-control form-control shadow-sm bg-white rounded" asp-for="Name" placeholder="Введите имя">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname"></label>
                    <input class="form-control form-control shadow-sm bg-white rounded" asp-for="Surname" placeholder="Введите фамилию">
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Lastname"></label>
                    <input class="form-control form-control shadow-sm bg-white rounded" asp-for="Lastname" placeholder="Введите отчество">
                    <span asp-validation-for="Lastname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telephone"></label>
                    <input class="form-control form-control shadow-sm bg-white rounded" asp-for="Telephone" placeholder="Введите телефон">
                    <span asp-validation-for="Telephone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RegisterCode"></label>
                    <input class="form-control form-control shadow-sm bg-white rounded" asp-for="RegisterCode" placeholder="Введите код регистрации">
                    <span asp-validation-for="RegisterCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input class="form-control form-control shadow-sm bg-white rounded" asp-for="Password" placeholder="Введите пароль">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordConfirm"></label>
                    <input class="form-control form-control shadow-sm bg-white rounded" asp-for="PasswordConfirm" placeholder="Повторите пароль">
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>
                <div>
                    <div class="form-group  pt-1">
                        <button type="submit" class="btn btn-success btn-block shadow-sm rounded">Зарегистрироваться</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>