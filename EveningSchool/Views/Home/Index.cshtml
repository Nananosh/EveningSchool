@model List<EveningSchool.ViewModels.ArticleViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="content">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-8 d-flex justify-content-center">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="slider1.jpg" alt="..." style="height: 450px; width: 850px;">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>ГУО «Средняя школа №225» г. Минска</h3>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="slider2.jpg" alt="..." style="height: 450px; width: 850px;">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Дата открытия 01.09.2021</h3>
                    </div>
                </div>
                <
                <div class="carousel-item">
                    <img src="slider3.jpg" alt="..." style="height: 450px; width: 850px;">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Директор школы - Качан Татьяна Владимировна</h3>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
            </div>
    </div>
    <div class="row">
        <div class="col-lg-12 h1 d-flex justify-content-center mt-3">
            Последние новости нашей школы.
        </div>
    </div>
    @{
        int count = Model.Count > 6 ? 6 : Model.Count;
    }
    @for (int i = 0; i < count; i++)
    {
        <div class="row shadow-sm mt-5">
            <div class="col-lg-12 d-flex justify-content-start mb-3 mt-2">
                <div class="text-muted">@Model[i].DatePublication</div>
            </div>
            <div class="col-lg-12 d-flex justify-content-start mb-3">
                <div class="h2">
                    <a asp-controller="Article" asp-action="Article" asp-route-id="@Model[i].Id">@Model[i].Title</a>
                </div>
            </div>
            <div class="col-lg-12 d-flex justify-content-start mb-3">
                <img src="@Model[i].Image" style="max-height: 350px; max-width: 50%; background-size: cover; margin: 0;">
            </div>
            <div class="col-lg-12 mb-3 cropped-text">
                @Model[i].Text
            </div>
        </div>
    }
</div>